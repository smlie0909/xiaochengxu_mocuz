.user-publish{
    padding:40rpx 40rpx 40rpx 120rpx; 
    position:relative;
    border-bottom:1rpx solid rgb(235,235,235);
}
.touxiang{
    position:absolute;
    left:40rpx;
    top:46rpx;
    width:60rpx;
    height:60rpx;
    border-radius: 30rpx;
}
.information .name{
    font-size:32rpx;
}
.information{
    display:flex;
    flex-direction: column;
    margin-bottom:40rpx;
}
.time{
    font-size:24rpx;
    color:#999999;
}
.speak{
    font-size:32rpx;
    display: block;
}
.speak-img{
    margin-top:30rpx;
    overflow: hidden;
}
.speak-img image{
    width:160rpx;
    height:160rpx;
    border-radius: 8rpx;
    display:block;
    float:left;
    margin-right:15rpx;
    margin-bottom:15rpx;
}
.comment-icon{
    display:flex;
    align-items: center;
    margin-top:30rpx;
}
.comment-icon image{
    width:38rpx;
    height:38rpx;
}
.comment-icon text{
    margin-left:20rpx;
    color:#999999;
    font-size:24rpx;
    width:94rpx;
    border-right:1rpx solid #999999;
    margin-right:44rpx;
    line-height:12px;

}
.comment-icon text:last-child{
    border:none;
}
.interaction{
    background-color:#f8f8f8;
    margin-top:30rpx;
    
}
.user-img{
    padding:26rpx;
    overflow:hidden;
    display: flex;
    justify-content: space-between;
}
.img-box{
    width:400rpx;
    word-break:keep-all;
    white-space:nowrap;
    overflow:hidden;
    height:50rpx;
}
.img-box image{
    display: inline-block;
    width:50rpx;
    height:50rpx;
    border-radius: 25rpx;
    margin-right:20rpx;
}
.user-img text{
    font-size:24rpx;
    color:#999999;
    float:right;
    line-height:50rpx;
}
.comment{
    border-top:1rpx solid rgb(235,235,235);
    padding:26rpx;
    overflow:hidden;
}
.comment text{
    line-height:38rpx;
}
.comment view{
    font-size:30rpx;
    margin-bottom:10rpx;
}
.comment view:last-child{
    margin:0;
}
.comment .comment-author{
    color:#53a7f0;
}
/* title */
.topic-header{
    width:100%;
    position: relative;
    height:340rpx;
    color:#fff;
}
.detailsimg{
    position:absolute;
    z-index:-1;
    width:100%;
    height:100%;
    overflow: hidden;
}
.topic-title{
    padding:190rpx 50rpx 30rpx;
    font-size:34rpx;
}
.topic-info{
    padding:0 50rpx;
    font-size:28rpx;
}
.topic-info .pic{
    padding-left:40rpx;
}
/* invol */
.thumbs-up{
    padding:35rpx 40rpx;
    overflow:hidden;
    display: flex;
    justify-content: space-between;
    border-bottom:1rpx solid rgb(235, 235, 235);
}
.thumbs-up text{
    font-size:24rpx;
    color:#999999;
    float:right;
    line-height:50rpx;
}
.thumbs-up .img-box{
    width:480rpx;
    word-break:keep-all;
    white-space:nowrap;
    overflow:hidden;
    height:50rpx;
}
.thumbs-up .img-box image{
    display: inline-block;
    width:50rpx;
    height:50rpx;
    border-radius: 25rpx;
    margin-right:20rpx;
}
