/* 解析表情 */
@import "wxParse/wxParse.wxss";
/* 加载阿里图标 */
@import "pages/template/style/iconfont.wxss"; 
/**app.wxss**/
 .wxParse-i{
     font-style:normal;
} 
.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    box-sizing: border-box;
    color:#4c4c4c;
    position: relative;
} 
.hidden{
    display: none;
}
::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}
.loading{
    display: flex;
    align-items: center;
    justify-content: center;
    padding:20rpx;
    font-size:28rpx;
    color:#999999;
}
.loading-img{
    width:26rpx;
    height:26rpx;
    margin-left:10rpx;
}
image{
    width:auto;
    height:auto;
}
.slide-image{
  width:100%;
  height:340rpx;
}
.navigator-hover {
    color:red;
}
.vip-static{
    color:#cccccc;
    font-size:26rpx;
    padding-left:20rpx;
    display:inline-block;
}
.fatie-fixed{
    position: fixed;
    bottom:50rpx;
    right:50rpx;
    width:120rpx;
    height:120rpx;
    background:rgb(0, 170, 255);
    border-radius: 60rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 10rpx 14rpx #a6e1ff;
}
.fatie-fixed image{
    width:60rpx;
    height:60rpx;
}
.prompt{
    display: flex;
    align-items: center;
    line-height:28rpx;
    height:60rpx;
    font-size: 28rpx;
    justify-content: center;
    color:#999999;

}
/* 登录注册 */
.verification{
    display:flex;
    align-items: center;
    justify-content: space-between;
    padding:20rpx 95rpx;
}
.verification image{
    width:40rpx;
    height:40rpx;
}
.verification input{
    font-size:30rpx;
    line-height:30rpx;
    border-bottom:1rpx solid #dddddd;
    width:90%;
    padding:15rpx;
}
.verification .verification-code{
    width:57%;
}
.codeButtonAble{
    width: 200rpx;
    height: 70rpx;
    line-height: 70rpx;
    font-size: 30rpx;
    box-sizing: border-box;
    margin:0;
    padding:0;
}
.codeButtonDisable{
    width: 200rpx;
    height: 70rpx;
    line-height: 70rpx;
    font-size: 30rpx;
    box-sizing: border-box;
    margin:0;
    padding:0;
    color:#999999;
}
.commitbutton{
    margin:80rpx 95rpx 0;
}
button:after{
    border:none;
}

/* 评论 */
.fixed{
    position:fixed;
    bottom:0;
    left:0;
    width:100%;
    height:100rpx;
    background:#fff;
    border-top:1rpx solid rgb(235, 235, 235);
    display:flex;
    align-items: center;
    justify-content: space-between;
}
.huifu{
    width:36rpx;
    height:34rpx;
    position:absolute;
    left:70rpx;
    top:33rpx;
}
.comment-input{
    height:60rpx;
    background:#f2f2f2;
    width:450rpx;
    padding-left:90rpx;
    border-radius: 30rpx;
    font-size:28rpx;
    display: flex;
    align-items: center;
    margin-left:40rpx;
}
.zan-img{
    width:54rpx;
    height:50rpx;
    margin-right:40rpx;
}

.girl{
    color:#ff9cd5;
    font-size:26rpx;
    padding-left:20rpx;
}
.boy{
    color:#00a9ff;
    font-size:26rpx;
    padding-left:20rpx;
}
.container .level_female{
    font-style:normal;
    font-weight: normal;
    color:#ff9cd5;
}
.container .level_secret{
    font-style:normal;
    font-weight: normal;
    color:#cccccc;
}
.container .level_male{
    font-style:normal;
    font-weight: normal;
    color:#00a9ff;
}
/* 自定义tosat */
.toast-out {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 9999;
    width: 100%;
    height: 100%;
    display: flex;        
    justify-content:center;
    align-items:center;
}
.toast-out .toast-in {
    display: flex;        
    justify-content:center; 
    flex-direction: column;
    align-items:center;
    min-width: 160rpx;
    background: rgba(0, 0, 0, 0.7);
    padding:40rpx 60rpx;
    color: white;
    border-radius: 16rpx;
}
.toast-out .toast-in span {
    font-size: 36px;
}
.toast-out .toast-in .toast-txt {
    font-size: 14px;
    padding-top: 20rpx;
}